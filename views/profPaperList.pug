extends professor 

block content
  h1 论文评分

  if(papers.length > 0)
    table(class='table table-striped') 
      thead
        tr
          th 文档名称
          th 所属课题
          th 上传学生 
          th 上传日期
          th 操作
      thbody
        each paper in papers 
          tr 
            td #{paper.paperId}
            td #{paper.paperName}
            td #{paper.stuName}
            td #{moment(paper.uploadDate).format('YYYY-MM-DD')}
            td
              if(userName === paper.userName)
                a(href='/stu/paper/' + paper.paperId)
                  img(src='/image/edit.png', style='width: 5%; height: auto;')
