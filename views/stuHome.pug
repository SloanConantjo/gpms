extends student 

block content

  div.hello(id = 'hello')
  div.time(id = 'time')

  hr
  if (topic.length > 0)
    h4 我的课题: #{topic[0].topicName}
  else 
    h4 暂未选课

  hr
  if (paper.length > 0)
    h4 最近上传文档: #{paper[0].paperName}
  else 
    h4 暂无已上传文档
  
  hr
  if (defense.length === 0)
    h4 暂无答辩信息
  else
    if(daysLeft > 0)
      h4 距离答辩还有 #{daysLeft} 天
      h4 答辩地点: #{defense[defense.length-1].defAddress}

  script.
    function updateTime() {
      var date = new Date();
      var hours = date.getHours();
      var minutes = date.getMinutes();
      var seconds = date.getSeconds();
      var hello;

      if (hours < 6)
        hello = '夜深了，还在卷啊';
      else if (hours < 9)
        hello = '早上好，又是美好的一天呢';
      else if (hours < 12)
        hello = '上午好，论文写完了吗';
      else if (hours < 14)
        hello = '中午好，还在减肥吗';
      else if (hours < 18)
        hello = '下午好，今天已经过去一大半啦';
      else
        hello = '晚上好，看来你还没忘记毕设呢';
      
      hours = hours < 10 ? '0' + hours : hours;
      minutes = minutes < 10 ? '0' + minutes : minutes;
      seconds = seconds < 10 ? '0' + seconds : seconds;
      var strTime = hours + ':' + minutes + ':' + seconds;

      document.getElementById('time').innerHTML = strTime;
      document.getElementById('hello').innerHTML = hello;
    }
    setInterval(updateTime, 1000);