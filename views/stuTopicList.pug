extends student 

block content
  h1 选题列表

  table(class='table table-striped') 
    thead
      tr
        th 课题号
        th 课题名称 
        th 指导教师
        th 发布日期
        th 操作
    thbody
      each topic in data 
        tr 
          td #{topic.topicId}
          td #{topic.topicName}
          td #{topic.profName}
          td #{moment(topic.postDate).format('YYYY-MM-DD')}
          td
            form(action='/stu/topic/info/'+ topic.topicId, method='GET')
              //- input(type='hidden', name='topicId', value=topic.topicId)
              button(type='submit') 查看